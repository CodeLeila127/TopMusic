<ContentPage
    x:Class="TopMusic.Pages.Top10Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TopMusic.PageModels">

    <!--  Vinculamos el ViewModel  -->
    <ContentPage.BindingContext>
        <vm:Top10PageModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="10">

            <!--  Título de la página  -->
            <Label
                Margin="0,20,0,10"
                FontSize="32"
                HorizontalOptions="Center"
                Text="Top 10 de Artistas" />

            <!--  Lista de artistas  -->
            <CollectionView
                x:Name="ArtistsCollection"
                ItemsSource="{Binding Artists}"
                SelectionChanged="CollectionView_SelectionChanged"
                SelectionMode="Single">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,5"
                            Padding="10"
                            BorderColor="Gray"
                            CornerRadius="10"
                            HasShadow="True">

                            <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">

                                <!--  Imagen del artista  -->
                                <Image
                                    Grid.Column="0"
                                    Aspect="AspectFill"
                                    HeightRequest="80"
                                    HorizontalOptions="Center"
                                    Source="{Binding ArtistImg}"
                                    VerticalOptions="Center"
                                    WidthRequest="80" />

                                <!--  Información del artista  -->
                                <StackLayout Grid.Column="1" Padding="10,0">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        Text="{Binding Name}"
                                        TextColor="Aqua" />
                                    <Label
                                        FontSize="14"
                                        Text="Último álbum:"
                                        TextColor="Gray" />
                                    <Label FontSize="16" Text="{Binding Album}" />
                                </StackLayout>

                                <!--  Ranking  -->
                                <Label
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    FontSize="24"
                                    HorizontalOptions="Center"
                                    Text="{Binding Ranking}"
                                    VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>